{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run npm: dev",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run dev"
    },
    {
      "name": "Run npm: test",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run test"
    },
    {
      "name": "Run npm: test:unit",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run test:unit"
    },
    {
      "name": "Run npm: test:e2e",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run test:e2e"
    },
    {
      "name": "Run npm: test:watch",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run test:watch"
    },
    {
      "name": "Run npm: test:coverage",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run test:coverage"
    },
    {
      "name": "Run npm: schema",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run schema"
    },
    {
      "name": "Run npm: lint",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run lint"
    },
    {
      "name": "Run npm: stylelint",
      "request": "launch",
      "type": "node-terminal",
      "command": "npm run stylelint"
    },
    {
      "name": "Launch Browser",
      "request": "launch",
      "type": "msedge",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      "type": "msedge",
      "name": "Launch Microsoft Edge",
      "request": "launch",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "url": "/Users/dongmings/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.3/out/startpage/index.html", // Provide your project's url to finish configuring
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "msedge",
      "name": "Launch Microsoft Edge in headless mode",
      "request": "launch",
      "runtimeArgs": [
        "--headless",
        "--remote-debugging-port=9222"
      ],
      "url": "/Users/dongmings/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.3/out/startpage/index.html", // Provide your project's url to finish configuring
      "presentation": {
        "hidden": true
      }
    },
    {
      "type": "vscode-edge-devtools.debug",
      "name": "Open Edge DevTools",
      "request": "attach",
      "url": "/Users/dongmings/.vscode/extensions/ms-edgedevtools.vscode-edge-devtools-2.1.3/out/startpage/index.html", // Provide your project's url to finish configuring
      "presentation": {
        "hidden": true
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch Edge Headless and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge in headless mode",
        "Open Edge DevTools"
      ]
    },
    {
      "name": "Launch Edge and attach DevTools",
      "configurations": [
        "Launch Microsoft Edge",
        "Open Edge DevTools"
      ]
    }
  ]
}